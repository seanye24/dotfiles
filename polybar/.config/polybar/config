[color]
# colors
nord0 = #2e3440
nord1 = #3b4252
nord2 = #434c5e
nord3 = #4c566a
nord4 = #d8dee9
nord5 = #e5e9f0
nord6 = #eceff4
nord7 = #8fbcbb
nord8 = #88c0d0
nord9 = #81a1c1
nord10 = #5e81ac
nord11 = #bf616a
nord12 = #d08770
nord13 = #ebcb8b
nord14 = #a3be8c
nord15 = #b48ead

[bar/mybar]
monitor = ${env:MONITOR:}
background = ${color.nord0}
foreground = ${color.nord6}
line-size = 3

width = 100%
height = 30

padding-right = 4
module-margin = 2

# font-0 = "Open Sans:size=10;1"
font-0 = "Noto Sans-Regular:size=10;1"
font-1 = "Material:style=Regular:size=12;2"

modules-left = i3 title
modules-center = 
modules-right = mobo-temperature cpu-temperature memory pulseaudio wireless wired date time 

[module/i3]
type = internal/i3
pin-workspaces = true
enable-click = true

label-focused = %index%
label-visible = %index%
label-unfocused = %index%
label-urgent = %index%

label-focused-background = ${color.nord2}
label-visible-background = ${color.nord2}
label-unfocused-background = ${color.nord0}
label-urgent-background = ${color.nord0}

label-focused-foreground = ${color.nord6}
label-visible-foreground = ${color.nord6}
label-unfocused-foreground = ${color.nord6}
label-urgent-foreground = ${color.nord6}

label-focused-padding = 4
label-visible-padding = 4
label-unfocused-padding = 4
label-urgent-padding = 4

[module/title]
type = internal/xwindow
format = <label>
label-maxlen = 75

[module/date]
type = internal/date
interval = 1.0
date = %B %d
label = %date%
format =  <label>

[module/time]
type = internal/date
interval = 1.0
time = %I:%M:%S %p
label = %time%
format =  <label>

[module/spotify]
type = custom/script
interval = 0.1
format = <label>
format-underline = ${color.nord4}
exec = python ~/.config/polybar/spotify_status.py -t 50 -p ',' -f '{play_pause} {song} - {artist} | {album} '

[module/wireless]
type = internal/network
interface = wlan0
format-connected = <ramp-signal> <label-connected>
format-disconnected = <label-disconnected>
label-connected = %essid%
label-disconnected = wifi disconnected
ramp-signal-0 = 

[module/wired]
type = internal/network
interface = enp0s31f6
format-connected = <ramp-signal> <label-connected>
format-disconnected = <label-disconnected>
label-connected = %ifname%
label-disconnected = ethernet disconnected
ramp-signal-0 = 

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1f.3.analog-stereo
use-ui-max = true
interval = 5
format-volume = <ramp-volume> <label-volume>
format-muted = <label-muted>
label-volume = %percentage%%
label-muted =  muted
label-muted-foreground = ${color.nord3}
ramp-volume-0 = 
ramp-volume-1 =  
ramp-volume-2 = 
click-right = pavucontrol &

[module/mobo-temperature]
type = internal/temperature
interval = 0.5
thermal-zone = 0
format = <label>
label = mobo %temperature-c%
hwmon-path = /sys/devices/platform/nct6775.656/hwmon/hwmon5/temp1_input

[module/cpu-temperature]
type = internal/temperature
interval = 0.5
thermal-zone = 0
format = <label>
label = cpu %temperature-c%
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input

[module/cpu]
type = internal/cpu
interval = 0.5

[module/memory]
type = internal/memory
interval = 1
format = <label>
label = ram %gb_used%/%gb_free%

[module/system-fan-speed]
type = custom/script
exec = ~/.config/polybar/system-fan-speed.sh
interval = 1







