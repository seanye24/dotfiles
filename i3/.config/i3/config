# workspace $ws9  gaps outer 60
# workspace $ws8  gaps inner 20
# workspace $ws8  gaps outer 60

# style window title
font pango:OpenSans 10 
title_align center
for_window [class=".*"] title_format "    %title    "
for_window [class=".*"] border pixel 0

# set correct monitor arrangement
exec --no-startup-id ~/.config/i3/monitor-arrangement.sh

# assign workspace to specific monitors
workspace $ws1  output $monitor-one
workspace $ws8  output $monitor-two
workspace $ws9  output $monitor-two
workspace $ws10 output $monitor-two

